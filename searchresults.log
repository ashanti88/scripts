apiVersion: v1
kind: Pod
metadata:
  name: nginx-pod
  labels:
    app: nginx-pod
    spec:
      volumes:
      - name: app-data-claim
        persistentVolumeClaim:
          claimName: app-data-claim
      containers:
      - name: nginx-pod
        image: nginx:1.14.0
        - name: NGINX_ROOT_PASSWORD
          value: {$PASSWORD}
        livenessProbe:
          tcpSocket:
            port: 80
        ports:
        - containerPort: 80
        volumeMounts:
        - name: 
          mountPath: /usr/share/nginx/html
tree 4b825dc642cb6eb9a060e54bf8d69288fbee4904

apiVersion: v1
kind: Pod
metadata:
  name: nginx-pod
spec:
  volumes:
  - name: vol
    hostPath:
      path: /usr/share/nginx/html
  containers:
  - name: nginx-pod
    image: nginx:1.14.0
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: app-data-claim
spec:
  accessModes:
    - ReadWriteOnce
  persistentVolumeReclaimPolicy: Recycle
  storageClassName: standart
  resources: 
    requests:
      storage: 1Gi
apiVersion: v1
kind: PersistentVolume
metadata:
  name: app-data
spec:
  capacity:
    storage: 1Gi
  volumes:
  - name:  
    hostPath:
    path: /data/app-data
  accessModes:
    - ReadWriteOnce
  storageClassName: standart
